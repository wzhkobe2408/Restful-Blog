<% include ../partials/header %>
  <div class="ui main text container segment">
    <div class="ui huge header">
      New Report
    </div>
    <div class="ui  header">
      <h5>Tips: You can chose a service person to fill some of the fields.<h5>
    </div>
    <select name="Service List" class="ui fluid normal dropdown">
      <option value="">Service List</option>
      <option value="angular">Name1--</option>
      <option value="css">--Name2</option>
      <option value="design">Name3--</option>
      <option value="ember">--Name4</option>
      <option value="html">Name5--</option>
      <option value="ia">--Name6</option>
      <option value="javascript">Name7--</option>
    </select>
    <form class='ui form' action="/reports" method="POST">
      <div class="field">
        <label>Title</label>
        <input type="text" name="report[title]" placeholder="title">
      </div>

      <div class="field">
        <label>Image</label>
        <input type="text" name="report[image]" placeholder="image">
      </div>

      <div class="field">
        <label>Blog Content</label>
        <textarea id="TextArea1" cols="20" rows="2" class="ckeditor" name="report[body]"></textarea>
      </div>

      <button class="ui primary basic button">Submit</button>
    </form>
  </div>
