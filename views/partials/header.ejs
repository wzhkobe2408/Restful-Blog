<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://cdn.bootcss.com/semantic-ui/2.2.13/semantic.min.css" rel="stylesheet">
  <link href="https://cdn.bootcss.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/custom.css">

  <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.js"></script>
  <script src="https://cdn.bootcss.com/jqueryui/1.12.1/jquery-ui.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
  <script src="https://cdn.bootcss.com/ckeditor/4.7.3/ckeditor.js"></script>
  <script src="https://cdn.bootcss.com/ckeditor/4.7.3/adapters/jquery.js"></script>
  <title>Rest Blog</title>
</head>
<body>
  <div class="ui fixed inverted menu">
      <div class="header item" id='brand'>
        <a href="/"><i class="fire icon"></i>Rest Blog</a>
      </div>
      <a href="/" class="item left-item">
        Home
      </a>
      <% if(user && user.isManage){ %>
        <a href="/blogs/new" class="item left-item">
          New Task
        </a>
      <% } %>
      <a href="/reports/new" class="item left-item">
        New Report
      </a>
      <a href="/dashboard" class="item left-item">
        Data Dashboard
      </a>
      <a href="/service" class="item left-item">
        Service Object
      </a>
      <div class="right menu rightMenu">
        <% if(!user){ %>
          <div class="ui category search item">
            <from action='/search' method='POST'>
              <div class="ui icon input">
                <input class="prompt" type="text" placeholder="Search name">
                <i class="search icon"></i>
              </div>
            </from>
          </div>
          <a href="/login" class='item'>Login</a>
          <a href="/signup" class='item'>Signup</a>
        <% } else { %>
          <div class="ui category search item">
            <form action='/search' method='POST'>
              <div class="ui icon input">
                  <input name='q' class="prompt" type="text" placeholder="Search name...">
                  <i class="search icon" style='color:#000'></i>
              </div>
            </form>
          </div>
          <div class="ui compact menu">
            <div class="ui simple dropdown item">Login as <%= user.username %> <i class="dropdown icon"></i> <div class="menu">
              <a href="/users/<%= user._id %>/profile" class="item">My Profile</a>
              <a href="/users/<%= user._id %>/reports" class="item">My Report</a>
              <a href="/users/<%= user._id %>/tasks" class="item Backmessage">My Task Feedback<span class="ui orange small circular label">2</span></a>
            </div>
          </div>
        </div>
          <a href="/logout" class='item'>Logout</a>
        <% } %>
        <a href="#" class='item' id='hamberge'>
          <i class="sidebar icon"></i>
        </a>
      </div>
  </div>

  <div id="A" class="positionChange ui left inverted vertical menu">
    <a href="/" class="item ">
      Home
    </a>
    <a href="/blogs/new" class="item ">
      New Task
    </a>
    <a href="/reports/new" class="item ">
      New Report
    </a>
    <a href="/dashboard" class="item ">
      Data Dashboard
    </a>
      <% if(!user){ %>
        <div class="ui category search item">
          <div class="ui icon input">
            <input class="prompt" type="text" placeholder="Search name">
            <i class="search icon"></i>
          </div>
          <div class="results"></div>
        </div>
        <a href="/login" class='item'>
          Login
        </a>
        <a href="/signup" class='item'>
          Signup
        </a>
      <% } else { %>
        <div class="ui category search item">
          <div class="ui icon input">
            <input class="prompt" type="text" placeholder="Search name...">
            <i class="search icon" style='color:#000'></i>
          </div>
        </div>

        <div class="ui compact menu">
          <div id="verticalLoginMessage" class="ui simple dropdown item">Login as <%= user.username %> <i class="dropdown icon"></i> <div class="menu">
            <a href="/users/<%= user._id %>/profile" class="item">My Profile</a>
            <a href="/users/<%= user._id %>/reports" class="item">My Report</a>
            <a href="/users/<%= user._id %>/tasks" class="item">My Task Feedback<span class="ui orange small circular label">2</span></a>
          </div>
        </div>
      </div>
        <a href="/logout" class='item'>Logout</a>
      <% } %>
  </div>
