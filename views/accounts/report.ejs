<% include ../partials/header %>
  <div class="ui main text container segment">
    <div class="ui large header">我的报告</div>
    <% if(success.length > 0){ %>
      <div class="ui success message">
        <i class="close icon" style='margin-top:5px;'></i>
        <%= success %>
      </div>
    <% } %>
    <% if(user.reports && user.reports.length == 0){ %>
      <h3 class="ui red header">你现在还没有报告记录</h3>
    <% } else{ %>
      <% user.reports.forEach(function(report){ %>
        <div class="ui items">
          <div class="item">
            <div class="ui small image">
             <img src="http://www.semantic-ui.cn/images/avatar2/large/matthew.png">
           </div>
            <div class="middle aligned content">
              <div class="description">
                <p>义工对象名字：</p>
                <p>义工时间：</p>
                <p>义工内容：</p>
                <a class="ui floated basic vilot button">
                  查看更多
                </a>
              </div>
            </div>
          </div>
        </div>
        <hr />
      <% }) %>
    <% } %>
  </div>
<% include ../partials/footer %>
