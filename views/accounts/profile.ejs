<% include ../partials/header %>
<div class="ui main grid container adjustcontainer">
        <div class="row">
        <div class="col-md-5" style="margin-bottom:18px;">
          <div class="ui huge header">用户信息</div>
          <div class="ui card" style="width:80%">
            <div class="image" style="height:335px;overflow:hidden;">
              <img id='profile' src="<%= user.userProfile.avatar %>">
            </div>
            <div class="content">
              <a class="header"><%= user.username %></a>
              <div class="meta">
                <span class="date">2013年加入</span>
              </div>

              <div class="description"><%= user.email %><a style="position:absolute;right:10px;bottom:115px;" class="ui primary basic button" href="/email">申请成为管理员</a></div>

            </div>
            <div class="extra content">
              <form action="/users/<%= user._id %>/profileImage" method="POST" enctype="multipart/form-data">
                <span class="ui fluid button btn-file">
                  <span id="buttonLabel">上传新头像</span> <input type="file" name="myAvatar">
                </span>
                <button type="submit" style="margin-top:8px;" class="fluid ui primary basic button">提交</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-md-7">
          <div class="ui  huge header">
            编辑信息
          </div>
          <div class="ui main text segment">
          <form class='ui form' action="/login" method="POST">
            <div class="field">
              <label>个人简介</label>
              <textarea name='adress' rows="8" cols="80">输入个人简介...</textarea>
            </div>
            <div class="field">
              <div class="two fields">
                <div class="field">
                  <label>年龄</label>
                  <input type="number" name="age" placeholder="Enter your age">
                </div>
                <div class="field">
                  <label>学号</label>
                  <input type="text" name="studentNumber" placeholder="Enter your student number">
                </div>
              </div>
            </div>
            <div class="field">
              <select>
                <option value="">专业</option>
                <option value="1">计算机类</option>
                <option value="2">机械类</option>
                <option value="3">金融类</option>
                <option value="4">语言类</option>
                <option value="5">化学类</option>
                <option value="6">物理类</option>
              </select>
            </div>
            <div class="field">
              <div class="inline fields">
                <label for="fruit">年级</label>
                <div class="field">
                  <div class="ui radio checkbox">
                    <input type="radio" name="fruit" checked="" tabindex="0" class="hidden">
                    <label>大一</label>
                  </div>
                </div>
                <div class="field">
                  <div class="ui radio checkbox">
                    <input type="radio" name="fruit" tabindex="0" class="hidden">
                    <label>大二</label>
                  </div>
                </div>
                <div class="field">
                  <div class="ui radio checkbox">
                    <input type="radio" name="fruit" tabindex="0" class="hidden">
                    <label>大三</label>
                  </div>
                </div>
                <div class="field">
                  <div class="ui radio checkbox">
                    <input type="radio" name="fruit" tabindex="0" class="hidden">
                    <label>大四</label>
                  </div>
                </div>
              </div>
            </div>
            <div class="field">
              <div class="inline fields">
                <label for="fruit">性别</label>
                <div class="field">
                  <div class="ui radio checkbox">
                    <input type="radio" name="fruit" checked="" tabindex="0" class="hidden">
                    <label>男</label>
                  </div>
                </div>
                <div class="field">
                  <div class="ui radio checkbox">
                    <input type="radio" name="fruit" tabindex="0" class="hidden">
                    <label>女</label>
                  </div>
                </div>
                <div class="field">
                  <div class="ui radio checkbox">
                    <input type="radio" name="fruit" tabindex="0" class="hidden">
                    <label>其他</label>
                  </div>
                </div>
              </div>
            </div>
            <div class="field">
              <label>联系方式</label>
              <input type='text' name='phone' placeholder='手机号/电话' />
            </div>
            <div class="field">
              <label>地址</label>
              <input type="text" name='adress' placeholder="地址" >
            </div>
            <button class="ui primary basic button">保存</button>
          </form>
        </div>
        </div>
      </div>
      </div>
<% include ../partials/footer %>
