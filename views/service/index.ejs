<% include ../partials/header %>
<div class="ui main container segment downContainer">
  <div class="ui huge header">
    服务对象
  </div>
  <table class="ui selectable striped table">
    <thead>
      <tr>
        <th>ID</th>
        <th>名字</th>
        <th>年龄</th>
        <th>地址</th>
        <th>编辑</th>
        <th>删除</th>
      </tr>
    </thead>
    <tbody>

        <% services.slice((pageCount-1)*10,pageCount*10+1).forEach(function(service) { %>
          <tr>
            <td><%= service.serviceId %></td>
            <td><a href="/service/<%= service._id %>"><strong><%= service.name %></strong></a></td>
            <td><%= service.age %></td>
            <td><%= service.address %></td>
            <td><a href="/service/<%= service._id %>" ><i class="write black icon"></i><a></td>
            <td><i class="remove user icon"></i></td>
          </tr>
        <% }) %>

    </tbody>
    <tfoot>
      <tr>
        <th colspan="2">
          <a href="/service/new"  class="ui primary basic large button" >添加新服务对象</a>
        </th>
        <th colspan="4">
        <div class="ui right floated pagination menu">
          <a class="icon item">
            <i class="left chevron icon"></i>
          </a>
          <a class="item">1</a>
          <a class="item">2</a>
          <a class="item">3</a>
          <a class="item">4</a>
          <a class="icon item">
            <i class="right chevron icon"></i>
          </a>
        </div>
      </th>
    </tr>
  </tfoot>
  </table>
</div>
<% include ../partials/footer %>
